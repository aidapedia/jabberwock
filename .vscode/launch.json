    "version": "0.2.0",
    "configurations": [
        {
            "name": "REST - Application",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/http/main.go",
            "env": {
                "APP_ENV": "development",
                "CONFIG_FILE_PATH": "../../files/config",
                "SECRET_FILE_PATH": "../../files/config/secret_dev.json",
                "FEATURE_FLAG_FILE_PATH": "../../files/config/feature-flag.json",
            },
            "cwd": "${workspaceFolder}/cmd/http"
        },
        {
            "name": "UP - Database Migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/migration/main.go",
            "args": [
                "--method=up"
            ],
            "env": {
                "APP_ENV": "development",
                "CONFIG_FILE_PATH": "../../files/config",
                "SECRET_FILE_PATH": "../../files/config/secret.json",
                "FEATURE_FLAG_FILE_PATH": "../../files/config/feature-flag.json",
            },
            "cwd": "${workspaceFolder}/pkg/migration"
        },
        {
            "name": "DOWN - Database Migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/migration/main.go",
            "args": [
                "--method=down"
            ],
            "env": {
                "APP_ENV": "development",
                "CONFIG_FILE_PATH": "../../files/config",
                "SECRET_FILE_PATH": "../../files/config/secret.json",
                "FEATURE_FLAG_FILE_PATH": "../../files/config/feature-flag.json",
            },
            "cwd": "${workspaceFolder}/pkg/migration"
        },
        {
            "name": "RESET - Database Migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/migration/main.go",
            "args": [
                "--method=reset"
            ],
            "env": {
                "APP_ENV": "development",
                "CONFIG_FILE_PATH": "../../files/config",
                "SECRET_FILE_PATH": "../../files/config/secret.json",
                "FEATURE_FLAG_FILE_PATH": "../../files/config/feature-flag.json",
            },
            "cwd": "${workspaceFolder}/pkg/migration"
        },
        {
            "name": "SEED ALL - Database Migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/migration/main.go",
            "args": [
                "--method=seed",
                "--seed=0"
            ],
            "env": {
                "APP_ENV": "development",
                "CONFIG_FILE_PATH": "../../files/config",
                "SECRET_FILE_PATH": "../../files/config/secret.json",
                "FEATURE_FLAG_FILE_PATH": "../../files/config/feature-flag.json",
            },
            "cwd": "${workspaceFolder}/pkg/migration"
        }
    ]
}